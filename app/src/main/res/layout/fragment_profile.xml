<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/profile_fragment"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="156dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/id_profile_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:hint=" Your Name"
                android:inputType="text"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/id_profile_userEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/id_profile_userPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:hint="Your Mobile Number"
                android:inputType="phone"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/dynamic_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/id_profile_landMark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:hint="Land Mark"
                android:inputType="text"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/id_profile_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:hint="City"
                android:inputType="text"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/id_profile_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:hint="State"
                android:inputType="text"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/id_profile_pinCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:hint="Enter PIN CODE"
                android:inputType="number"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/id_profile_helpPhone1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:hint="Enter Relative Phone number1"
                android:inputType="number"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/id_profile_helpPhone2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:hint="Enter Relative Phone number2"
                android:inputType="number"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/id_profile_helpPhone3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:hint="Enter Relative Phone number3"
                android:inputType="number"
                android:textSize="18dp" />

            <Button
                android:id="@+id/id_profile_saveBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="40dp"
                android:text="SAVE"
                android:textSize="20dp"/>



        </LinearLayout>


    </ScrollView>


</LinearLayout>